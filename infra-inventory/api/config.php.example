<?php
// PHP 7.4+
error_reporting(E_ALL);
ini_set('display_errors', 0); // Disable for production
ini_set('log_errors', 1);

// Timezone
date_default_timezone_set('UTC');

// --- Database Connection ---
$host     = 'localhost';        // MariaDB/MySQL Host
$username = 'infra_user';       // Database Username
$password = 'your_strong_password'; // Database Password
$db_name  = 'infra_inventory';  // Database Name

// PDO Connection
try {
    $pdo = new PDO("mysql:host=$host;dbname=$db_name", $username, $password);
    $pdo->setAttribute(PDO::ATTR_ERRMODE, PDO::ERRMODE_EXCEPTION);
} catch(PDOException $e) {
    http_response_code(500);
    // Do not expose detailed errors in production
    die(json_encode(['message' => 'Database connection failed. Check server logs.']));
}
